{
  "policy_version": "1",
  "id": "6a47dd95-6904-4997-ba21-c510ba3e75fa",
  "name": "Registry Dependent CVSS",
  "description": "Alert on vulnerabilities with varying CVSS scores depending on registry",
  "severity": "HIGH_SEVERITY",
  "lifecycle_stages": [ "BUILD", "DEPLOY" ],
  "categories": [ "Security Best Practices" ],
  "rationale": "Demonstrate boolean policy logic",
  "remediation": "Rebuild images",
  "disabled": true,
  "policy_sections": [
      {
          "section_name": "Docker Registries",
          "policy_groups": [
              {
                  "field_name": "CVSS",
                  "boolean_operator": "OR",
                  "negate": false,
                  "values": [
                      { "value": ">=5" }
                  ]
              },
              {
                  "field_name": "Image Registry",
                  "boolean_operator": "OR",
                  "negate": false,
                  "values": [
                      { "value": "docker.io" }
                  ]
              }
          ]
      },
      {
          "section_name": "Other Registries",
          "policy_groups": [
              {
                  "field_name": "CVSS",
                  "boolean_operator": "OR",
                  "negate": false,
                  "values": [
                      { "value": ">=7" }
                  ]
              },
              {
                  "field_name": "Image Registry",
                  "boolean_operator": "OR",
                  "negate": false,
                  "values": [
                      { "value": "gcr.io" },
                      { "value": "gke.gcr.io" },
                      { "value": "quay.io" }
                  ]
              }
          ]
      },
      {
          "section_name": "StackRox Registries",
          "policy_groups": [
              {
                  "field_name": "CVSS",
                  "boolean_operator": "OR",
                  "negate": false,
                  "values": [
                      { "value": "10" }
                  ]
              },
              {
                  "field_name": "Image Registry",
                  "boolean_operator": "OR",
                  "negate": true,
                  "values": [
                      { "value": "stackrox.io" },
                      { "value": "collector.stackrox.io" }
                  ]
              }
          ]
      }
  ]
}
